<Window x:Class="Json4CPP.Visualizer.Views.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Json4CPP.Visualizer.Views"
        mc:Ignorable="d" 
        Title="Json4CPP Visualizer MessageBox"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        FontSize="16"
        Width="350"
        Height="450">
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Json4CPP.Visualizer;Component/Themes/Generic.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>
  <Grid Margin="4">
    <TextBox Text="{Binding Message}"
             IsReadOnly="True"
             ScrollViewer.HorizontalScrollBarVisibility="Auto"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.CanContentScroll="True"/>
  </Grid>
</Window>
